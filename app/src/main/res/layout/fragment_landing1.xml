<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/Widget.Theme.ProjecBinarKBG.ActionBar.Fullscreen"
    tools:context="com.project_binar.kbg.ui.lending_page.LandingFragment1">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/landing1_vector"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:lottie_rawRes="@raw/vs_player"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/landing1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:text="@string/landing1_text"
        android:textColor="@color/textPopupEditTextColor"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing1_vector" />
</androidx.constraintlayout.widget.ConstraintLayout>